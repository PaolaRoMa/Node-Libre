<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Tareas</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Lista de Tareas</h1>
    <form action="/agregar" method="post">
      <label for="tarea">Nueva Tarea:</label>
      <input type="text" id="tarea" name="tarea" required>
      <button type="submit">Agregar</button>
    </form>
    <ul>
      <% tareas.forEach((tarea, index) => { %>
        <li class="<%= tarea.completada ? 'completed' : '' %>">
          <%= tarea.descripcion %>
          <% if (!tarea.completada) { %>
            <form action="/marcar/<%= index %>" method="post" style="display: inline-block;">
              <button type="submit">Completada</button>
            </form>
          <% } else { %>
            <span>(Completada)</span>
          <% } %>
          <form action="/borrar/<%= index %>" method="post" style="display: inline-block; margin-left: 10px;">
            <button type="submit">Eliminar</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
